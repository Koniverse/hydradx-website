extends ../_layouts/main

block prepend head
    - var title = siteDescription

block append head
    meta(property='og:description' content=siteDescription)
    meta(property='og:url' content=rootUrl('/'))
    meta(property='description' content=siteDescription)

block content
    .container
        .header-background
        .weird-stroke
        .section-1
            .text-center
                img.hydradx(src=url('/images/hydradx.png'))

            h1.headline-1 Cross-chain Liquidity Protocol

            .row.section-1-info-box.gx-0
                .col-6
                    .info-box
                        .info-box__content
                            ul.listing
                                li.listing__item The Future is Multichain
                                li.listing__item The Future is Shared Liquidity
                                li.listing__item Stay Up To Date With The Future
                        .info-box__bottom
                            a.info-box__action(href='#') Subscribe
                .col-6
                    .info-box
                        .info-box__content
                            ul.listing
                                li.listing__item Incentivized Testnet
                                li.listing__item Time For You To Get Going
                                li.listing__item Get HDX For Your Contribution
                        .info-box__bottom
                            a.info-box__action(href='#') Participate


        .section-2
            h1.headline-2 Start building with us

            .row.section-2-building-with-us
                .col-4
                .col-4.text-center
                    a.btn.btn__lg(href='#') Join Hydration
                .col-4
                    ul.listing
                        li.listing__item.listing__item--large Hydration is an active community of builders mentored by our core developers. Fill out the application and join us!

        .board-info
            .board-info__label Our Mission
            .board-info__body
                ul.listing.fz-24
                    li.listing__item.justify-content-center Enable frictionless liquidity for all cryptoassets
                    li.listing__item.justify-content-center Build open, neutral & autonomous protocol for liquidity
                    li.listing__item.justify-content-center Enable global permisionaless finance
                p.opacity-70 HydraDX is built as a parachain – specialized blockchain on Polkadot network, benefiting from shared security, speed and flexibility that it offers. HydraDX is optimized for a single purpose: enabling fluid programmable value exchange.

        .section-2-info-box
            .weird-logo-circling
            .row.row-1
                .col-4
                    .info-box.info-box--shadow.box-1
                        .info-box__content.text-center
                            p.header APPLICATION-SPECIFIC CHAIN
                            span.text HydraDX is build to support various financial applications and optimized for DeFi use cases.
                .col-4
                .col-4
                    .info-box.info-box--shadow.box-2
                        .info-box__content.text-center
                            p.header POWERED BY HDX
                            span.text Native reserve token improves security and aligns incentives of key network participants. The total supply of HDX is a function of liquidity provisioned.
            .row.row-2
                .col-4
                    .info-box.info-box--shadow.box-3
                        .info-box__content.text-center
                            p.header MULTI-ASSET LIQUIDITY OMNIPOOL
                            span.text Our unique solution enables combining all assets into one shared liquidity pool – unlocking unparalleled efficiency.
                .col-4
                .col-4
                    .info-box.info-box--shadow.box-4
                        .info-box__content.text-center
                            p.header NATIVE LIQUIDITY FOR POLKADOT ECOSYSTEM
                            span.text HydraDX is a natural swap solution for all assets built on Substrate and in the fast-growing Polkadot ecosystem – a place to bootstrap liquidity.

        .board-info.member-of
            .board-info__label Member Of
            .board-info__body
                .members
                    img(src=url('/images/defi.svg') style="width: 186px")
                    img(src=url('/images/bc-berkeley.svg') style="width: 223px")
                    img(src=url('/images/substrate.svg') style="width: 155px")

        h1.headline-2 Roadmap
        table.table.roadmap
            tr
                td Q2 2019
                td
                    ul.listing
                        li.listing__item Idea of building cross-chain liquidity protocol
                td
                    ul.listing.listing__no-style
                        li.listing__item ★
            tr
                td Q3 2019
                td
                    ul.listing
                        li.listing__item Building tooling for Polkadot & first xyk PoC
                td
                    ul.listing.listing__no-style
                        li.listing__item ★
            tr
                td Q3 2020
                td
                    ul.listing
                        li.listing__item Invented new CFMM model
                        li.listing__item Buit POS chain
                td
                    ul.listing.listing__no-style
                        li.listing__item ★
                        li.listing__item ★
            tr
                td Q4 2020
                td
                    ul.listing
                        li.listing__item Started a hack-net
                        li.listing__item Transaction payments in exogenous tokens & in-block order matching
                td
                    ul.listing.listing__no-style
                        li.listing__item ★
                        li.listing__item ★
            tr
                td Q1 2021
                td
                    ul.listing
                        li.listing__item The most successful LBP token distribution
                        li.listing__item Connected to Rococo testnet & cross-chain token transfers
                td
                    ul.listing.listing__no-style
                        li.listing__item ★
                        li.listing__item ★
            tr
                td Q2 2021
                td
                    ul.listing
                        li.listing__item Enabled Staking & launched Incentivized Testnet
                        li.listing__item Released first version of HydraDX-js SDK
                        li.listing__item Start Audits
                        li.listing__item Release Basilisk parachain on Kusama
                        li.listing__item Conduct BSX LBP on Basilisk
                td
                    ul.listing.listing__no-style
                        li.listing__item ★
                        li.listing__item ★
                        li.listing__item ★
                        li.listing__item ★
                        li.listing__item ★
            tr.p-color
                td Q3 2021
                td
                    ul.listing
                        li.listing__item.listing__item--red Enable LBP functionality for other assets on Basilisk
                        li.listing__item.listing__item--red Test financial applications and governance on Basilisk
                td
                    ul.listing.listing__no-style
                        li.listing__item ☆
                        li.listing__item ☆
            tr.p-color
                td Q4 2021
                td
                    ul.listing
                        li.listing__item.listing__item--red Build parachain staking module
                        li.listing__item.listing__item--red HydraDX launching Polkadot parachai
                td
                    ul.listing.listing__no-style
                        li.listing__item ☆
                        li.listing__item ☆
            tr.p-color
                td 2022
                td
                    ul.listing
                        li.listing__item.listing__item--red Focusing on HydraDX & Basilisk adoption
                td
                    ul.listing.listing__no-style
                        li.listing__item ☆

        .about-the-team.text-center
            h2.p-color.p-shadow.text-uppercase About the team
            img(src=url('/images/galactic-council.svg') style="width: 205px")
            p.p-color=__('Hydra DX is developed by ')
                a.p-color(href='#') Galactic Council
                | &nbsp;- Substrate oriented dev house building indy & cool stuff, with the goal of improving the Universe.

