mixin header
    header.header.header-desktop.d-none.d-xl-flex
        a.header__logo(href=url('/'))
            img(src=url('/images/logo-pink-darkblue.svg'))
        ul.header__menu
            li
                a(href=url('/', locale)) About
            li
                a(href=url('/docs.html', locale)) Docs
            li
                a(href=url('/basilisk.html', locale)) Basilisk
            li
                a(href=url('/join-hydration.html', locale)) Join Hydration
        .header__actions
            div.language-selector
                img.language-selector__global(src=url('/images/global.svg'))
                span.language-selector__current ENG
                img.language-selector__arrow-down(src=url('/images/arrow-down.svg'))

            a.btn.btn__md.ff-sans-hl.btn-launch-app(href='#') Launch App
    header.header-mobile.d-xl-none
        div.header-mobile__hamberger(role='button')
            div.middle-stick
        div.header-mobile__main
            a.header-mobile__logo(href=url('/', locale))
                img(src=url('/images/logo-hydradx-mobile.png'))

